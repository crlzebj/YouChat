<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zjx.youchat.mapper.UserMapper">
	<insert id="insertUser">
		insert into user values
		(#{id},#{email},#{password},#{status},#{nickname},#{permission},#{sex},#{personalSignature},#{areaCode},#{createTime},#{lastLoginTime},#{lastLogoutTime});
	</insert>

	<select id="selectUser" resultType="User">
		select * from user;
	</select>

	<update id="updateUserById">
		update user
		<set>
			<if test="user.id!=null">
				id=#{user.id},
			</if>
			<if test="user.email!=null">
				email=#{user.email},
			</if>
			<if test="user.password!=null">
				password=#{user.password},
			</if>
			<if test="user.status!=null">
				status=#{user.status},
			</if>
			<if test="user.nickname!=null">
				nickname=#{user.nickname},
			</if>
			<if test="user.permission!=null">
				permission=#{user.permission},
			</if>
			<if test="user.sex!=null">
				sex=#{user.sex},
			</if>
			<if test="user.personalSignature!=null">
				personal_signature=#{user.personalSignature},
			</if>
			<if test="user.areaCode!=null">
				area_code=#{user.areaCode},
			</if>
			<if test="user.createTime!=null">
				create_time=#{user.createTime},
			</if>
			<if test="user.lastLoginTime!=null">
				last_login_time=#{user.lastLoginTime},
			</if>
			<if test="user.lastLogoutTime!=null">
				last_logout_time=#{user.lastLogoutTime},
			</if>
		</set>
		where id=#{id};
	</update>

	<delete id="deleteUserById">
		delete from user 
		where id=#{id};
	</delete>

	<select id="selectUserById" resultType="User">
		select * from user
		where id=#{id};
	</select>

	<update id="updateUserByEmail">
		update user
		<set>
			<if test="user.id!=null">
				id=#{user.id},
			</if>
			<if test="user.email!=null">
				email=#{user.email},
			</if>
			<if test="user.password!=null">
				password=#{user.password},
			</if>
			<if test="user.status!=null">
				status=#{user.status},
			</if>
			<if test="user.nickname!=null">
				nickname=#{user.nickname},
			</if>
			<if test="user.permission!=null">
				permission=#{user.permission},
			</if>
			<if test="user.sex!=null">
				sex=#{user.sex},
			</if>
			<if test="user.personalSignature!=null">
				personal_signature=#{user.personalSignature},
			</if>
			<if test="user.areaCode!=null">
				area_code=#{user.areaCode},
			</if>
			<if test="user.createTime!=null">
				create_time=#{user.createTime},
			</if>
			<if test="user.lastLoginTime!=null">
				last_login_time=#{user.lastLoginTime},
			</if>
			<if test="user.lastLogoutTime!=null">
				last_logout_time=#{user.lastLogoutTime},
			</if>
		</set>
		where email=#{email};
	</update>

	<delete id="deleteUserByEmail">
		delete from user 
		where email=#{email};
	</delete>

	<select id="selectUserByEmail" resultType="User">
		select * from user
		where email=#{email};
	</select>


</mapper>

